.data_input_form
  = form_for @spot do |f|
    .field
      .field-label
        = f.label :なまえ
      .field-input
        = f.text_field :name, placeholder: "name"
    .field
      .field-label
        = f.label :住所
      .field-input
        = f.text_field :address, placeholder: "address"
    .field
      .field-label
        = f.label :料金
      .field-input
        = f.text_field :price, placeholder: "price"
    .field
      .field-label
        = f.label :雰囲気
      .field-input
        = f.text_field :mood, placeholder: "mood"
    .field
      .field-label
        = f.label :緯度
      .field-input
        = f.text_field :Lat, placeholder: "Lat"
    .field
      .field-label
        = f.label :経度
      .field-input
        = f.text_field :Lng, placeholder: "Lng"
    = f.submit "SEND", class: "send-btn"


